{
    "tasks": [
        {
            "label": "Run Single File C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile and run SingleFile C++ file"
        },
        {
            "type": "cppbuild",
            "label": "Build and Run All C++ Files",
            "command": "g++",
            "args": [
                "-fno-inline",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile and run all C++ files in the project"
        }
    ],
    "version": "2.0.0"
}